 pipeline {
    agent any
    
    environment {
        dockerhub_user = credentials('dockerhub_user')
        dockerhub_pass = credentials('dockerhub_pass')
    }

    stages {
        stage('Terraform Deploy') {
            steps {
                withCredentials([
                    string(credentialsId: 'token',     variable: 'YC_TOKEN'),
                    string(credentialsId: 'cloud', variable: 'YC_CLOUD_ID'),
                    string(credentialsId: 'folder',variable: 'YC_FOLDER_ID')
                ]) 
                {
                    dir('/home/serega/project/terraform') {
                    sh 'terraform init'
                    sh 'terraform plan'
                    sh 'terraform apply -auto-approve'
                    sh 'terraform output -raw external_ip_address_vm-builder > /tmp/builder_ip'
                    sh 'terraform output -raw external_ip_address_vm-prod > /tmp/prod_ip'
                    }
                }
            }
        }
    }
}