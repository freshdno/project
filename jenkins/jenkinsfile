pipeline {
    agent any
    
    environment {
        dockerhub_user = credentials('doc_user')
        dockerhub_pass = credentials('doc_pass')
    }

    stages {
        stage('Terraform deploy') {
            steps {
                withCredentials([
                    string(credentialsId: 'token', variable: 'YC_TOKEN'),
                    string(credentialsId: 'cloud', variable: 'YC_CLOUD_ID'),
                    string(credentialsId: 'folder', variable: 'YC_FOLDER_ID')
                ]) {
                    dir('/home/serega/project/terraform') {
                        sh 'terraform init'
                        sh 'terraform plan'
                        sh 'terraform apply -auto-approve'
                        
                        script {
                            env.ext_ip_builder = sh(script: 'terraform output -raw external_ip_address_vm-builder', returnStdout: true).trim()
                            env.ext_ip_prod = sh(script: 'terraform output -raw external_ip_address_vm-prod', returnStdout: true).trim()
                        }
                    }
                }
            }
        }
        
        stage('Wait for the machine to be ready') {
            steps {
                script {
                    sh 'sleep 60'
                }
            }
        }

        stage('Ansible deploy') {
            steps {
                script {
                    sh """
                    ansible-playbook -i ${env.ext_ip_builder},${env.ext_ip_prod}, -u jenkins --private-key /var/lib/jenkins/.ssh/id_ed25519 -e "builder_ip=${env.ext_ip_builder} prod_ip=${env.ext_ip_prod} dockerhub_user=${env.dockerhub_user} dockerhub_pass=${env.dockerhub_pass} ansible_ssh_extra_args='-o StrictHostKeyChecking=no'" /home/serega/project/ansible/ansible.yml
                    """
                }
            }
        }
    }
}
