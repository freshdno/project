 pipeline {
    agent any
    
    environment {
        dockerhub_user = credentials('doc_user')
        dockerhub_pass = credentials('doc_pass')
    }

    stages {
        stage('Terraform deploy') {
            steps {
                withCredentials([
                    string(credentialsId: 'token',     variable: 'YC_TOKEN'),
                    string(credentialsId: 'cloud', variable: 'YC_CLOUD_ID'),
                    string(credentialsId: 'folder',variable: 'YC_FOLDER_ID')
                ]) 
                {
                    dir('/home/serega/project/terraform') {
                    sh 'terraform init'
                    sh 'terraform plan'
                    sh 'terraform apply -auto-approve'
                    def external_ip_builder = sh(script: 'terraform output -raw external_ip_address_vm-builder', returnStdout: true).trim()
                    def external_ip_prod = sh(script: 'terraform output -raw external_ip_address_vm-prod', returnStdout: true).trim()
                    env.ext_ip_builder = external_ip_builder
                    env.ext_ip_prod = external_ip_prod
                    }
                }
            }
        }
        stage('Ansible deploy') {
             steps {
                script {
                    sh """
                    ansible-playbook -i ${env.ext_ip_builder},${env.ext_ip_prod}, -u jenkins --private-key /var/lib/jenkins/.ssh/id_ed25519 --extra-vars "builder_ip=${env.ext_ip_builder} prod_ip=${env.ext_ip_prod}" /home/serega/project/ansible/ansible.yml
                    """
                }
    }
}
}
}
